<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="10" styleClass="aurora-background" stylesheets="@css/aurora-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aurora.LoginController">
    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="63.0" prefWidth="330.0" style="-fx-font-size: 20px;" text="Aurora Forecast Systems's Login" textAlignment="CENTER">
      <font>
         <Font name="Times New Roman Bold" size="19.0" />
      </font>
      <textFill>
         <LinearGradient endX="1.0" endY="1.0">
            <stops>
               <Stop>
                  <color>
                     <Color red="0.7699999809265137" green="0.7491708993911743" blue="0.6313999891281128" />
                  </color>
               </Stop>
               <Stop offset="0.006711409395973154">
                  <color>
                     <Color green="0.0562017448246479" blue="1.0" />
                  </color>
               </Stop>
               <Stop offset="0.9977628635346756">
                  <color>
                     <Color red="1.0" />
                  </color>
               </Stop>
               <Stop offset="1.0">
                  <color>
                     <Color red="1.0" />
                  </color>
               </Stop>
            </stops>
         </LinearGradient>
      </textFill></Label>
    <TextField fx:id="usernameField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="242.0" promptText="Username">
      <font>
         <Font name="Century Schoolbook" size="13.0" />
      </font></TextField>
    <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="33.0" prefWidth="241.0" promptText="Password">
      <font>
         <Font name="Century Schoolbook" size="13.0" />
      </font></PasswordField>
    <Label fx:id="errorLabel" textFill="red" />
    <Button onAction="#login" prefHeight="28.0" prefWidth="72.0" text="Login">
      <font>
         <Font name="Century Schoolbook" size="13.0" />
      </font></Button>
    <Hyperlink onAction="#goToRegister" prefHeight="33.0" prefWidth="179.0" text="Don't have an account? Register" textFill="WHITE" />
</VBox>
